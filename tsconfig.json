{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "lib": ["esnext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "newLine": "LF",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "stripInternal": true,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"]
  }
}
